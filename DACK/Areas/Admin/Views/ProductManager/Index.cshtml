@model IEnumerable<DACK.Models.Product>
@* index admin *@
@{
    ViewData["Title"] = "Index";
}

<h1>TRANG SẢN PHẨM</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
                <td>
                    <img src="@item.ImageUrl" alt="Product Image" style="max-width: 200px;" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>               
                <a asp-action="Display" asp-route-id="@item.Id">Xem chi tiết</a> |
                <a asp-action="Update" asp-route-id="@item.Id">Sửa</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
