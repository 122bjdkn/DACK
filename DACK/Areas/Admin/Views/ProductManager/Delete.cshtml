@model DACK.Models.Product
@* xóa admin *@
@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa sản phẩm</h1>

<h3>Bạn chắc chắn muốn xóa?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Tên</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            <p>Giá</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            <p>Mô tả</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            <p>Loại</p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class = "col-sm-2">
            <p>Hình ảnh</p>
        </dt>
        <div class="col-sm-10">
            <img src="@Model.ImageUrl" alt="Product Image" style="max-width:200px;" id="previewImage" />
        </div>

    </dl>
    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trở về</a>
    </form>
</div>
